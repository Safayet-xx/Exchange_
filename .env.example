# Copy this file to .env and fill in your actual values

# Django Secret Key
SECRET_KEY=your-secret-key-here

# Django Debug Mode
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_NAME=db.sqlite3

# Stytch Configuration
STYTCH_PROJECT_ID=your-project-id
STYTCH_SECRET=your-secret-key
STYTCH_PUBLIC_TOKEN=your-public-token
STYTCH_PROJECT_DOMAIN=your-project-domain
STYTCH_ENVIRONMENT=test

# Email Configuration
# Option 1: Gmail SMTP (Real emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-16-digit-app-password
DEFAULT_FROM_EMAIL=Exchange Platform <your-gmail@gmail.com>

# Option 2: Console backend (Development - emails in terminal)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Security Settings
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
